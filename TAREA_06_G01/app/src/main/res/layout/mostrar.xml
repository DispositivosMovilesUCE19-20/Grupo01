<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registro"
    android:orientation="vertical"
    tools:context=".Mostrar">

    <TextView

        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"

        android:gravity="center"
        android:text="Usuarios Registrados"
        android:textSize="22sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="358dp"></ListView>

    <TextView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:gravity="center"
        android:text="Detalle de contacto (Seleccione para ver)"
        android:textSize="16sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btDescargar"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Descargar Contenido XML"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalirApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Salir" />

        <Button
            android:id="@+id/btCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Cerrar SesiÃ³n" />


    </LinearLayout>

</LinearLayout>